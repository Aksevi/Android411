<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="#006400">

        <!-- первый горизонтальный слой -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_stroke_black_press_light_green"
                android:padding="10dp"
                android:text="Back"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!--Пустой View  для того чтобы текстовые кнопки раздвинуть-->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/buttonRestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_stroke_black_press_light_green"
                android:padding="10dp"
                android:text="Сдать заново"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- Название игры -->
        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blackjack Level 1"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"/>

        <!-- Имя игрока и счет -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name: "
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/playerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Очки: 0"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/playerBankShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash: "
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                />

        </LinearLayout>

        <!-- Карты игрока -->
        <TextView
            android:id="@+id/playerCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Cards:"
            android:textSize="20sp"
            android:textColor="#FFD700"
            android:layout_marginBottom="8dp"/>

        <!-- Слой где будут выводится карты игрока-->
        <LinearLayout
            android:id="@+id/layoutPlayerCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"/>

        <!-- Слой где будет выводится банк ставок-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Банк: "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- Имя дилера и счет -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dealerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dealer Name: "
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/dealerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Очки: 0"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/dealerBankShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash: "
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                />

        </LinearLayout>

        <!-- Карты дилера -->
        <TextView
            android:id="@+id/dilerCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dealer Cards:"
            android:textSize="20sp"
            android:textColor="#FFD700"
            android:layout_marginBottom="8dp"/>

        <!-- Слой где будут выводится карты дилера-->
        <LinearLayout
            android:id="@+id/layoutDealerCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Кнопки управления -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/buttonHint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="Еще карту"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/buttonStand1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Стоп"
                android:textAllCaps="false"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/buttonBet1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Сделать ставку"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/doubleBet1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="#F44336"
                android:text="Удвоить ставку"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>