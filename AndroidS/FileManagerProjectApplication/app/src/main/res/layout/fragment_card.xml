<?xml version="1.0" encoding="utf-8"?>
<!--ЭТО ВНЕШНИЙ ВИД ПУТИ И СПИСКА ФАЙЛОВ ВЫБРАННОГО ТИПА ПАМЯТИ-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/card_img_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/outline_arrow_drop_down_circle_24"
            android:padding="14dp"/>
        <TextView
            android:id="@+id/card_tv_path_folder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Path/"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_internal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>