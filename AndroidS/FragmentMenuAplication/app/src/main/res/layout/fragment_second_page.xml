<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSecondPage"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/main"
    >
    <EditText
        android:id="@+id/date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:layout_marginTop="90dp"/>

    <EditText
        android:id="@+id/time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Time" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/green"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Text" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Text"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/before_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/outline_arrow_left_alt_24"
            android:background="@android:color/transparent"/>

        <ImageSwitcher
            android:id="@+id/image_switcher"
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:inAnimation="@anim/slide_in_x"
            android:outAnimation="@anim/slide_out_x"
            />





        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/outline_arrow_right_alt_24"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>